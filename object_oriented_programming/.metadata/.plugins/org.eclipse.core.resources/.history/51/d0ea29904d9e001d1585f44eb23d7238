package a_triangle_calculator;

import java.util.Locale;
import java.util.Scanner;
import entites.Triangle;

public class Interface {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		Triangle x, y;
		x = new Triangle();
		y = new Triangle();
		
		
		
		System.out.println("Enter the measures of triangle X: ");
		x.a = sc.nextDouble();
		x.b = sc.nextDouble();
		x.c = sc.nextDouble();
		System.out.println("Enter the measures of triangle Y: ");
		y.a = sc.nextDouble();
		y.b = sc.nextDouble();
		y.c = sc.nextDouble();
		
		x.p = (x.a + x.b + x.c) / 2.0;
		x.area = Math.sqrt(x.p * (x.p - x.a) * (x.p - x.b) * (x.p - x.c));
		
		y.p = (y.a + y.b + y.b) / 2.0;
		y.area = Math.sqrt(y.p * (y.p - y.a) * (y.p - y.a) * (y.p - y.c));
		
		x.ranger();
		y.ranger();
		
		System.out.printf("O valor da área é %.4f%n", x.area);
		System.out.printf("O valor da área é %.4f%n", y.area);
		
		if (x.area > y.area) {
			System.out.println("Larger area: X");
		}else if(x.area < y.area) {
			System.out.println("Larger area: Y");
		}else {
			System.out.println("Revisar Codigo");
		}
		
				
		
		
		sc.close();
	
	}

}
